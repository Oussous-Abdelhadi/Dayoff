{% extends 'base.html.twig' %}

{% block title %}Invitation{% endblock %}

{% block body %}
<h4 class="fw-bold py-3 mb-4">Invitation</h4>


<div class="row">
  <!-- Basic with Icons -->
  <div class="col-xxl">
    <div class="card mb-4">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Invit√© une personne</h5> <small class="text-muted float-end">Merged input group</small>
      </div>
      <div class="card-body">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% set email = app.request.query.get('email') %}

        <form action="{{ path('app_invitation', {'email': email}) }}" method="post">
            <div class="row mb-3">
                <label for="exampleFormControlTextarea1" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <div class="input-group input-group-merge">
                    <input type="text" class="form-control" id="defaultFormControlInput" placeholder="name@example.com" value="{{email}}" name="email">
                    </div>
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
            </div>
        </form>

      </div>
    </div>
  </div>
</div>
{% endblock %}


